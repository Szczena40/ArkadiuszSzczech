package ArkadiuszSzczech;
import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
    int i;
    Scanner in=new Scanner(System.in);

    System.out.print("Podaj liczbę rzeczywistą: ");
    i=in.nextInt();
    while(i>=0){
            System.out.print("Podaj liczbę rzeczywistą: ");
            i=in.nextInt();
            if(i<0)
                break;
        }





    }
}
